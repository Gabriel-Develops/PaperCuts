<%- include('partials/header') %>

<main>
    <%- include('partials/nav') %>
    <h1>Welcome <%= userName %> to <%= bookclubName %></h1> 
    <span>Join Code: <span class="copy-code" data-clubid="<%= clubId %>"><%= clubId %></span></span>
    <% if (accountType === 'instructor') { %>
        <form action="/bookclub/<%= bookclubID %>?_method=DELETE" method="POST">
            <button type="submit">Delete Bookclub</button>
        </form>
    <% } else if (accountType === 'student') { %>
        <form action="/bookclub/<%= bookclubID %>/leaveBookclub?_method=PUT" method="POST">
            <button type="submit">Leave Bookclub</button>
        </form>
    <% } %>
    <h1>You are a<%= accountType === 'instructor' ? 'n' : '' %> <%= accountType[0].toUpperCase() + accountType.slice(1) %></h1>
    <%console.log(students)%>
    <% if (students.length) { %>
        <h1>Students in bookclub are <%= students.join(' ') %></h1>
    <% } else {%>
        <h1>No students in bookclub yet</h1>
    <% } %>
    <% if (accountType === 'instructor') { %>
        <section>
            <div>
                <% if (locals.messages.errors) { %>
                    <% locals.messages.errors.forEach( el => { %>
                        <p><%= el.msg %></p>
                    <% }) %>
                <% } %>
            </div>
            <form action="/bookclub/<%= bookclubID %>/addStudent?_method=PUT" method="POST">
                <label for="studentEmail">Add a student by email</label>
                <input type="text" id="studentEmail" name="studentEmail">
                <button type="submit">Submit</button>
            </form>
        </section>
    <% } %>


</main>

<%- include('partials/footer') %>