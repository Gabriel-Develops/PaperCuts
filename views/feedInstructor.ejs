<%- include('partials/header') %>

<main>
    <h1>Welcome to the BookClub</h1>

    <h1>Your are logged in!</h1>
    <h2>You are an Instructor!</h2>
    <% if (bookclubs) { %>
        <section>
            <% bookclubs.forEach(x => { %>
                <a href="/bookclub/<%= x.id %>"><%= x.name %></a>
            <% }) %>
        </section>
    <% } %>
    <div>
        <% if (locals.messages.errors) { %>
            <% locals.messages.errors.forEach( el => { %>
                <p><%= el.msg %></p>
            <% }) %>
        <% } %>
    </div>
    <form action="/bookclub" method="POST">
        <label for="name">Name of your Bookclub</label>
        <input type="text" id="name" name="name">
        <button type="submit">Create Classroom</button>
    </form>
    <a href="/logout">Logout</a>
</main>

<%- include('partials/footer') %>